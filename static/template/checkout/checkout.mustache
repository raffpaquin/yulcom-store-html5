

<div class="page page-checkout">

	<h1 style="float:left; width:200px;">
		Checkout
	</h1>
	


	<div style="float:right; width:600px;">
		<ul class="checkout-progress">
			<li class="progress-shipping-address" class="active">
				<a href="#" onclick="app.checkout.goTo('shipping-address'); return false;">Shipping Address</a>
			</li>
			<li class="progress-billing-address">
				<a href="#" onclick="app.checkout.goTo('billing-address'); return false;">Billing Address</a>
			</li>
			<li class="progress-payment-method">
				<a href="#" onclick="app.checkout.goTo('payment-method'); return false;">Payment Information</a>
			</li>
			<li class="progress-review">
				<a href="#" onclick="app.checkout.goTo('review'); return false;">Review</a>
			</li>
		</ul>
	</div>

	<div class="clear"></div>

	<div class="checkout-panel" style="opacity:0;">
		<ul>
			<li class="step-shipping-address" style="display:none;">
				<div class="col-1-2">
					<img src="http://tadose.ca/images/layout/square_map-icon.png" />
				</div>

				<div class="col-2-2">
					
					<form style="display:none;" class="address-form" onsubmit="return false;">
						<h2>
							Add Shipping Address 
							<a href="#" onclick="app.checkout.toggleForm('shipping-address'); return false;">&laquo; View All</a>
						</h2>
						<input name="firstname" type="text" class="w2" placeholder="Firstname" />
						<input type="text" class="w2"  placeholder="Lastname" /><br/>
						<input type="text" class="w1" placeholder="Street" /><br/>
						<input type="text" class="w1" placeholder="Street" /><br/>
						<input type="text" class="w2" placeholder="City" />
						<input type="text" class="w2" placeholder="Zip / Postal Code" /><br/>
						<input type="text" class="w2" placeholder="Country" />
						<input type="text" class="w2" placeholder="State / Province" />
						
					</form>

					<div class="form-list ">
						<h2>Select Shipping Address</h2>
						<ul class="checkout-address-list">
							<li onclick="app.checkout.saveSection('shipping-address'); return false;">
								<label>
									<input type="radio" />
									8217 av de Gaspé<br/>
									Montréal, Quebec. H2P 2J9
								</label>
							</li>
							<li class="active" onclick="app.checkout.saveSection('shipping-address'); return false;">
								<label>
									<input type="radio" />
									160, rue Saint-Viateur Est<br/>
									Bureau 600<br/>
									Montréal, Quebec. H2P 2J9
								</label>
							</li>
							<li class="add" onclick="app.checkout.toggleForm('shipping-address'); return false;">
								Add new
							</li>
						</ul>
					</div>

					<label class="same-as-shipping">
						<input checked="checked" type="checkbox" /> Use same for Billing Address
					</label>

				</div>

				<div class="clear"></div>

				<div class="btn-group">
					<a href="/cart" class="btn">Back to Cart</a>
					<a href="#" class="btn btn-green" onclick="app.checkout.saveSection('shipping-address'); return false;">Continue &raquo;</a>
				</div>
			</li>
			<li class="step-billing-address" style="display:none;">
				<div class="col-1-2">
					<img style="margin-top: 100px;" src="http://tadose.ca/images/layout/square_map-icon.png" />
				</div>

				<div class="col-2-2">
					<h2>New Billing Address</h2>
					<form class="address-form" onsubmit="return false;">
						<input type="text" class="w2" placeholder="Firstname" />
						<input type="text" class="w2"  placeholder="Lastname" /><br/>
						<input type="text" class="w1" placeholder="Street" /><br/>
						<input type="text" class="w1" placeholder="Street" /><br/>
						<input type="text" class="w2" placeholder="City" />
						<input type="text" class="w2" placeholder="Zip / Postal Code" /><br/>
						<input type="text" class="w2" placeholder="Country" />
						<input type="text" class="w2" placeholder="State / Province" />
					</form>
				</div>

				<div class="clear"></div>

				<div class="btn-group">
					<a href="#" class="btn" onclick="app.checkout.goTo('shipping-address'); return false;">Back</a>
					<a href="#" class="btn btn-green" onclick="app.checkout.saveSection('billing-address'); return false;">Continue &raquo;</a>
				</div>
			</li>
			<li class="step-payment-method" style="display:none;">
				<div class="col-1-2">
					<img style="margin-top: 100px;" src="http://tadose.ca/images/layout/square_map-icon.png" />
				</div>

				<div class="col-2-2">

					<form style="display:none;" class="address-form" onsubmit="return false;">
						<h2>
							Add Payment Method 
							<a href="#" onclick="app.checkout.toggleForm('payment-method'); return false;">&laquo; View All</a>
						</h2>
						<form class="address-form" onsubmit="return false;">
						<input type="text" class="cc-num w1" placeholder="Credit Card Number" /><br/>

						<input type="text" class="w3" placeholder="CVV" />
						<input type="text" class="w3" placeholder="Expiration Month" />
						<input type="text" class="w3" placeholder="Year" />
					</form>
						
					</form>

					<div class="form-list ">
						<h2>Select Payment Method</h2>
						<ul class="checkout-cc-list">
							<li onclick="app.checkout.saveSection('payment-method'); return false;">
								<label>
									VISA Credit Card<br/>
									XXXX 4567 &mdash; Expiration 12/2013
								</label>
								<img src="/static/images/cc/visa.png" />
							</li>
							<li class="active" onclick="app.checkout.saveSection('payment-method'); return false;">
								<label>
									MasterCard Credit Card<br/>
									XXXX 3928 &mdash; Expiration 13/2015
								</label>
								<img src="/static/images/cc/mastercard.png" />
							</li>
							<li class="add" onclick="app.checkout.toggleForm('payment-method'); return false;">
								Add new
							</li>
						</ul>
					</div>


					
				</div>

				<div class="clear"></div>

				<div class="btn-group">
					<a href="#" class="btn" onclick="app.checkout.goTo('billing-address'); return false;">Back</a>
					<a href="#" class="btn btn-green" onclick="app.checkout.saveSection('payment-method'); return false;">Continue &raquo;</a>
				</div>
			</li>
			<li class="step-review" style="display:none;">
				<div class="col-1-2">
					<img style="margin-top: 50px;" src="http://tadose.ca/images/layout/square_map-icon.png" />
				</div>

				<div class="col-2-2">
					<h2>Order Review</h2>
					<form class="address-form" onsubmit="return false;">
						<input type="text" class="w1" placeholder="Credit Card Number" /><br/>

						<input type="text" class="w3" placeholder="CVV" />
						<input type="text" class="w3" placeholder="Expiration Month" />
						<input type="text" class="w3" placeholder="Year" />
					</form>
				</div>

				<div class="clear"></div>

				<div class="btn-group">
					<a href="#" class="btn" onclick="app.checkout.goTo('payment-method'); return false;">Back</a>
					<a href="#" class="btn btn-green" onclick="app.checkout.saveSection('review'); return false;">Process &raquo;</a>
				</div>
			</li>
		</ul>
	</div>
</div>